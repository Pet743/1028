<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.alse.mapper.AlseChatMessageMapper">

    <resultMap type="AlseChatMessage" id="AlseChatMessageResult">
        <result property="messageId"    column="message_id"    />
        <result property="conversationId" column="conversation_id" />
        <result property="senderId"     column="sender_id"     />
        <result property="receiverId"   column="receiver_id"   />
        <result property="content"      column="content"       />
        <result property="contentType"  column="content_type"  />
        <result property="mediaUrl"     column="media_url"     />
        <result property="readStatus"   column="read_status"   />
        <result property="sendTime"     column="send_time"     />
        <result property="readTime"     column="read_time"     />
        <result property="createTime"   column="create_time"   />
        <result property="updateTime"   column="update_time"   />
        <result property="createBy"     column="create_by"     />
        <result property="updateBy"     column="update_by"     />
        <result property="status"       column="status"        />
        <result property="delFlag"      column="del_flag"      />
    </resultMap>

    <sql id="selectAlseChatMessageVo">
        select message_id, conversation_id, sender_id, receiver_id, content, content_type, media_url, read_status, send_time, read_time, create_time, update_time, create_by, update_by, status, del_flag from alse_chat_message
    </sql>

    <select id="selectAlseChatMessageByMessageId" parameterType="Long" resultMap="AlseChatMessageResult">
        <include refid="selectAlseChatMessageVo"/>
        where message_id = #{messageId} and del_flag = '0'
    </select>

    <select id="selectAlseChatMessagesByConversationId" resultMap="AlseChatMessageResult">
        <include refid="selectAlseChatMessageVo"/>
        where conversation_id = #{conversationId} and del_flag = '0'
        <if test="beforeMessageId != null">
            and message_id &lt; #{beforeMessageId}
        </if>
        order by send_time desc
        <if test="limit != null">
            limit #{limit}
        </if>
    </select>

    <select id="selectAlseChatMessageList" parameterType="AlseChatMessage" resultMap="AlseChatMessageResult">
        <include refid="selectAlseChatMessageVo"/>
        <where>
            del_flag = '0'
            <if test="conversationId != null "> and conversation_id = #{conversationId}</if>
            <if test="senderId != null "> and sender_id = #{senderId}</if>
            <if test="receiverId != null "> and receiver_id = #{receiverId}</if>
            <if test="contentType != null "> and content_type = #{contentType}</if>
            <if test="readStatus != null "> and read_status = #{readStatus}</if>
            <if test="sendTime != null "> and send_time = #{sendTime}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by send_time desc
    </select>

    <insert id="insertAlseChatMessage" parameterType="AlseChatMessage" useGeneratedKeys="true" keyProperty="messageId">
        insert into alse_chat_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="conversationId != null">conversation_id,</if>
            <if test="senderId != null">sender_id,</if>
            <if test="receiverId != null">receiver_id,</if>
            <if test="content != null">content,</if>
            <if test="contentType != null">content_type,</if>
            <if test="mediaUrl != null">media_url,</if>
            <if test="readStatus != null">read_status,</if>
            <if test="sendTime != null">send_time,</if>
            <if test="readTime != null">read_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="conversationId != null">#{conversationId},</if>
            <if test="senderId != null">#{senderId},</if>
            <if test="receiverId != null">#{receiverId},</if>
            <if test="content != null">#{content},</if>
            <if test="contentType != null">#{contentType},</if>
            <if test="mediaUrl != null">#{mediaUrl},</if>
            <if test="readStatus != null">#{readStatus},</if>
            <if test="sendTime != null">#{sendTime},</if>
            <if test="readTime != null">#{readTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
        </trim>
    </insert>

    <update id="updateAlseChatMessage" parameterType="AlseChatMessage">
        update alse_chat_message
        <trim prefix="SET" suffixOverrides=",">
            <if test="conversationId != null">conversation_id = #{conversationId},</if>
            <if test="senderId != null">sender_id = #{senderId},</if>
            <if test="receiverId != null">receiver_id = #{receiverId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="contentType != null">content_type = #{contentType},</if>
            <if test="mediaUrl != null">media_url = #{mediaUrl},</if>
            <if test="readStatus != null">read_status = #{readStatus},</if>
            <if test="sendTime != null">send_time = #{sendTime},</if>
            <if test="readTime != null">read_time = #{readTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where message_id = #{messageId}
    </update>

    <update id="updateMessagesReadStatus">
        update alse_chat_message
        set read_status = 1,
            read_time = #{readTime},
            update_time = #{readTime}
        where conversation_id = #{conversationId}
          and receiver_id = #{receiverId}
          and read_status = 0
          and del_flag = '0'
    </update>

    <delete id="deleteAlseChatMessageByMessageId" parameterType="Long">
        update alse_chat_message set del_flag = '2' where message_id = #{messageId}
    </delete>

    <delete id="deleteAlseChatMessageByMessageIds" parameterType="String">
        update alse_chat_message set del_flag = '2' where message_id in
        <foreach item="messageId" collection="array" open="(" separator="," close=")">
            #{messageId}
        </foreach>
    </delete>
</mapper>