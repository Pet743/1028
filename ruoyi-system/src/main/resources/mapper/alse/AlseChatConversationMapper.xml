<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.alse.mapper.AlseChatConversationMapper">

    <resultMap type="AlseChatConversation" id="AlseChatConversationResult">
        <result property="conversationId"    column="conversation_id"    />
        <result property="conversationType"  column="conversation_type"  />
        <result property="name"              column="name"               />
        <result property="userId1"           column="user_id_1"          />
        <result property="userId2"           column="user_id_2"          />
        <result property="lastMessage"       column="last_message"       />
        <result property="lastMessageTime"   column="last_message_time"  />
        <result property="unreadCount1"      column="unread_count_1"     />
        <result property="unreadCount2"      column="unread_count_2"     />
        <result property="createTime"        column="create_time"        />
        <result property="updateTime"        column="update_time"        />
        <result property="createBy"          column="create_by"          />
        <result property="updateBy"          column="update_by"          />
        <result property="status"            column="status"             />
        <result property="delFlag"           column="del_flag"           />
    </resultMap>

    <sql id="selectAlseChatConversationVo">
        select conversation_id, conversation_type, name, user_id_1, user_id_2, last_message, last_message_time, unread_count_1, unread_count_2, create_time, update_time, create_by, update_by, status, del_flag from alse_chat_conversation
    </sql>

    <!-- 根据两个用户ID查询会话 -->
    <select id="selectConversationByUsers" resultMap="AlseChatConversationResult">
        SELECT c.*
        FROM alse_chat_conversation c
        WHERE (
                (c.user_id1 = #{userId1} AND c.user_id2 = #{userId2})
                OR
                (c.user_id1 = #{userId2} AND c.user_id2 = #{userId1})
            )
          AND c.del_flag = '0'
          AND c.status = '0'
            LIMIT 1
    </select>

    <select id="selectAlseChatConversationByConversationId" parameterType="Long" resultMap="AlseChatConversationResult">
        <include refid="selectAlseChatConversationVo"/>
        where conversation_id = #{conversationId} and del_flag = '0'
    </select>

    <select id="selectAlseChatConversationsByUserId" parameterType="Long" resultMap="AlseChatConversationResult">
        <include refid="selectAlseChatConversationVo"/>
        where (user_id_1 = #{userId} or user_id_2 = #{userId}) and del_flag = '0'
        order by last_message_time desc
    </select>

    <select id="selectAlseChatConversationByUserIds" resultMap="AlseChatConversationResult">
        <include refid="selectAlseChatConversationVo"/>
        where
        (
        (user_id_1 = #{userId1} and user_id_2 = #{userId2})
        or
        (user_id_1 = #{userId2} and user_id_2 = #{userId1})
        )
        and conversation_type = 0
        and del_flag = '0'
        limit 1
    </select>

    <select id="selectAlseChatConversationList" parameterType="AlseChatConversation" resultMap="AlseChatConversationResult">
        <include refid="selectAlseChatConversationVo"/>
        <where>
            del_flag = '0'
            <if test="conversationType != null "> and conversation_type = #{conversationType}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="userId1 != null "> and user_id_1 = #{userId1}</if>
            <if test="userId2 != null "> and user_id_2 = #{userId2}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by last_message_time desc
    </select>

    <insert id="insertAlseChatConversation" parameterType="AlseChatConversation" useGeneratedKeys="true" keyProperty="conversationId">
        insert into alse_chat_conversation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="conversationType != null">conversation_type,</if>
            <if test="name != null">name,</if>
            <if test="userId1 != null">user_id_1,</if>
            <if test="userId2 != null">user_id_2,</if>
            <if test="lastMessage != null">last_message,</if>
            <if test="lastMessageTime != null">last_message_time,</if>
            <if test="unreadCount1 != null">unread_count_1,</if>
            <if test="unreadCount2 != null">unread_count_2,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="conversationType != null">#{conversationType},</if>
            <if test="name != null">#{name},</if>
            <if test="userId1 != null">#{userId1},</if>
            <if test="userId2 != null">#{userId2},</if>
            <if test="lastMessage != null">#{lastMessage},</if>
            <if test="lastMessageTime != null">#{lastMessageTime},</if>
            <if test="unreadCount1 != null">#{unreadCount1},</if>
            <if test="unreadCount2 != null">#{unreadCount2},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
        </trim>
    </insert>

    <update id="updateAlseChatConversation" parameterType="AlseChatConversation">
        update alse_chat_conversation
        <trim prefix="SET" suffixOverrides=",">
            <if test="conversationType != null">conversation_type = #{conversationType},</if>
            <if test="name != null">name = #{name},</if>
            <if test="userId1 != null">user_id_1 = #{userId1},</if>
            <if test="userId2 != null">user_id_2 = #{userId2},</if>
            <if test="lastMessage != null">last_message = #{lastMessage},</if>
            <if test="lastMessageTime != null">last_message_time = #{lastMessageTime},</if>
            <if test="unreadCount1 != null">unread_count_1 = #{unreadCount1},</if>
            <if test="unreadCount2 != null">unread_count_2 = #{unreadCount2},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where conversation_id = #{conversationId}
    </update>

    <update id="updateLastMessage">
        update alse_chat_conversation
        set last_message = #{lastMessage},
            last_message_time = #{lastMessageTime},
            update_time = #{lastMessageTime}
        where conversation_id = #{conversationId}
    </update>

    <update id="increaseUnreadCount">
        UPDATE alse_chat_conversation
        <trim prefix="SET" suffixOverrides=",">
            <if test="receiverId != null">
                <choose>
                    <when test="receiverId == user_id1">
                        unread_count1 = unread_count1 + 1,
                    </when>
                    <when test="receiverId == user_id2">
                        unread_count2 = unread_count2 + 1,
                    </when>
                </choose>
            </if>
            update_time = now(),
        </trim>
        WHERE conversation_id = #{conversationId}
    </update>

    <update id="clearUnreadCount">
        update alse_chat_conversation
        <trim prefix="set" suffixOverrides=",">
            <if test="userId == userId1">
                unread_count_1 = 0,
            </if>
            <if test="userId == userId2">
                unread_count_2 = 0,
            </if>
            update_time = now(),
        </trim>
        where conversation_id = #{conversationId}
    </update>

    <delete id="deleteAlseChatConversationByConversationId" parameterType="Long">
        update alse_chat_conversation set del_flag = '2' where conversation_id = #{conversationId}
    </delete>

    <delete id="deleteAlseChatConversationByConversationIds" parameterType="String">
        update alse_chat_conversation set del_flag = '2' where conversation_id in
        <foreach item="conversationId" collection="array" open="(" separator="," close=")">
            #{conversationId}
        </foreach>
    </delete>
</mapper>